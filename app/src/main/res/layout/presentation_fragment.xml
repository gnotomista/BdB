<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:focusableInTouchMode="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_previous_slide"
        android:background="@mipmap/previous_slide"
        android:height="100dp"
        android:width="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:onClick="onPreviousSlide" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_next_slide"
        android:background="@mipmap/next_slide"
        android:height="100dp"
        android:width="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:onClick="onNextSlide" />

    <com.example.gennaro.bdb.TouchView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/touch_view"
        android:background="#336699"
        android:alpha=".2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true" />

    <com.example.gennaro.bdb.VerticalSeekBar
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:id="@+id/mouse_sensitivity_seekbar"
        android:progress="50"
        android:layout_toLeftOf="@+id/touch_view"
        android:layout_alignTop="@+id/touch_view" />

</RelativeLayout>